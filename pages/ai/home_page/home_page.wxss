/* pages/ai/home_page/home_page.wxss */

/* 主容器样式 */
.container {
  min-height: 100vh;
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to bottom, #323232 0%, #3F3F3F 40%, #1C1C1C 150%), 
              linear-gradient(to top, rgba(255,255,255,0.40) 0%, rgba(0,0,0,0.25) 200%);
  background-blend-mode: multiply;
}

/* Logo 部分样式 */
.logo-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10vh;
  margin-bottom: 10vh;
  flex: 1;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 90rpx;
}

.welcome-text {
  margin-top: 40rpx;
  text-align: center;
  color: #5893f9;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}



/* 功能块样式 - 修改为水平排列 */
.function-blocks {
  width: 100%;
  display: flex;
  flex-direction: row; /* 改为水平排列 */
  justify-content: space-between; /* 均匀分布 */
  gap: 20rpx;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.function-item {
  position: relative;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 30rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  flex: 1; /* 让三个项目等宽 */
  max-width: 32%; /* 防止过宽 */
}

.function-item:active {
  transform: scale(0.98);
  background-color: rgba(255, 255, 255, 0.15);
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.function-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-align: center;
}

.function-desc {
  font-size: 25rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

.coming-soon-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #FFA500;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}